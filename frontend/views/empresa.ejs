<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro Empresa</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
</head>

<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <img src="/assets/img/LogoLinkedOut.jpeg" class="img-fluid" alt="Logo Linked Out">
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="form-freela p-4 rounded">
                    <% if (typeof warning !=='undefined' && warning) { %>
                        <div class="alert alert-warning mt-3" role="alert">
                            <%= warning %>
                        </div>
                        <% } %>

                            <% if (typeof error !=='undefined' && error) { %>
                                <div class="alert alert-danger mt-3" role="alert">
                                    <%= error %>
                                </div>
                                <% } %>

                                    <% if (typeof success !=='undefined' && success) { %>
                                        <div class="alert alert-success mt-3" role="alert">
                                            <%= success %>
                                        </div>
                                        <% } %>

                                        <% if (typeof usuario !== 'undefined' && usuario) { %>
                                            <p>Cadastre sua Empresa, <%= usuario.nome %>!</p>
                                        <% } %>                                        
                                            <form method="POST" action="/api/empresa/cadastrar">
                                                <div class="mb-3">
                                                    <label for="nome" class="form-label">Nome da Empresa</label>
                                                    <input type="text" class="form-control" id="nome" name="nome"
                                                        placeholder="Minha Empresa" required>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="cnpj" class="form-label">CNPJ</label>
                                                    <input type="text" class="form-control" id="cnpj" name="cnpj"
                                                        placeholder="CNPJ" required>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="sobreNos" class="form-label">Sobre a Empresa</label>
                                                    <textarea class="form-control" id="sobreNos" name="sobreNos"
                                                        rows="3" required></textarea>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="idCategoria" class="form-label">Categoria</label>
                                                    <select class="form-control" id="idCategoria" name="idCategoria" required>
                                                        <option value="" disabled selected>Selecione uma categoria</option>
                                                        <% if (typeof categorias !== 'undefined' && categorias.length > 0) { %>
                                                            <% categorias.forEach(categoria => { %>
                                                                <option value="<%= categoria.id %>"><%= categoria.nome %></option>
                                                            <% }); %>
                                                        <% } else { %>
                                                            <option value="" disabled>Nenhuma categoria dispon√≠vel</option>
                                                        <% } %>
                                                    </select>
                                                </div>
                                                
                                                <div class="mb-3">
                                                    <label for="latitude" class="form-label">Latitude</label>
                                                    <input type="number" step="0.000001" class="form-control"
                                                        id="latitude" name="latitude">
                                                </div>

                                                <div class="mb-3">
                                                    <label for="longitude" class="form-label">Longitude</label>
                                                    <input type="number" step="0.000001" class="form-control"
                                                        id="longitude" name="longitude">
                                                </div>

                                                <div class="mb-3">
                                                    <input class="btn btn-success w-100" type="submit" value="Cadastrar"
                                                        id="cadastrar">
                                                </div>
                                            </form>
                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>

</html>