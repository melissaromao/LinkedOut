<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro Freelancer</title>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
</head>

<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <img src="/assets/img/LogoLinkedOut.jpeg" class="img-fluid" alt="Logo Linked Out">
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="form-freela p-4 rounded">
                    <% if (typeof warning !=='undefined' && warning) { %>
                        <div class="alert alert-warning mt-3" role="alert">
                            <%= warning %>
                        </div>
                        <% } %>

                            <% if (typeof error !=='undefined' && error) { %>
                                <div class="alert alert-danger mt-3" role="alert">
                                    <%= error %>
                                </div>
                                <% } %>

                                    <% if (typeof success !=='undefined' && success) { %>
                                        <div class="alert alert-success mt-3" role="alert">
                                            <%= success %>
                                        </div>
                                        <% } %>

                                            <% if (typeof usuario !=='undefined' && usuario) { %>
                                                <p>Cadastre Freelancer, <%= usuario.nome %>!</p>
                                                <% } %>
                                                    <form method="POST" action="/api/freelancer/cadastrar">
                                                        <h2 class="text-dark text-center mb-4">Cadastro de Freelancer
                                                        </h2>
                                                        <div class="mb-3">
                                                            <label for="nome" class="form-label">Nome</label>
                                                            <input type="text" class="form-control" id="nome"
                                                                name="nome" placeholder="Seu Nome" required>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="cpf" class="form-label">CPF</label>
                                                            <input type="text" class="form-control" id="cpf" name="cpf"
                                                                placeholder="123.456.789-10" required>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="tituloProfissional" class="form-label">Titulo
                                                                Profissional</label>
                                                            <input type="text" class="form-control"
                                                                id="tituloProfissional" name="tituloProfissional"
                                                                placeholder="TÃ­tulo Profissional" required>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="sobreMim" class="form-label">Sobre Mim</label>
                                                            <textarea class="form-control" id="sobreMim" name="sobreMim"
                                                                rows="3" style="resize: none;" required></textarea>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="dataNasc" class="form-label">Data de
                                                                nascimento</label>
                                                            <input type="date" class="form-control" id="dataNasc"
                                                                name="dataNasc" placeholder="dataNasc" required>
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="latitude" class="form-label">Latitude</label>
                                                            <input type="number" step="0.000001" class="form-control"
                                                                id="latitude" name="latitude">
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="longitude" class="form-label">Longitude</label>
                                                            <input type="number" step="0.000001" class="form-control"
                                                                id="longitude" name="longitude">
                                                        </div>

                                                        <div class="mb-3">
                                                            <input class="btn btn-success w-100" type="submit"
                                                                value="Cadastrar" id="cadastrar">
                                                        </div>
                                                    </form>
                                                    <a href="/home" class="btn btn-secondary w-100">Voltar</a>

                </div>
            </div>
        </div>
    </div>
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
</body>

</html>